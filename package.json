{
  "name": "nimbus",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{js,mjs,jsx,ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,jsx,ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start": "turbo run start",
    "start:dev": "turbo run start:dev",
    "prepare": "husky"
  },
  "lint-staged": {
      "**/*.{js,mjs,jsx,ts,tsx,md}": "prettier --write"
  },
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "@types/node": "^25.0.9",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  }
}
